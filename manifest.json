{
  "name": "Ad blocker manusanchi",
  "description": "An ad blocker extension by manusanchi",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "action": {
    "default_title": "Ad Blocker",
    "default_popup": "ad-block.html",
    "default_icon": "ad-block.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["ad-selectors.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "selectors-loader.js",
        "ad-block.js"
      ],
      "run_at": "document_end"
    }
  ]
}